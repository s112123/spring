<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="store">
	
	<!-- 전체 매장 개수 -->
	<select id="countAll" resultType="int">
		SELECT 
			COUNT(id) 
		FROM 
			store
	</select>	
	
	<!-- 매장목록 -->
	<select id="selectAll" resultType="com.spring.app.entity.Store">
		SELECT
			id, storename, president, addr1, tel, regdate
		FROM
			store
		ORDER BY id DESC
		LIMIT #{skip}, #{size}
	</select>

	<!-- 매장조회 -->
	<select id="selectOne" resultType="com.spring.app.entity.Store">
		SELECT 
			id, storename, president, addr1, tel, regdate
		FROM
			store
		WHERE id=#{id}
	</select>
		
	<!-- 매장등록 -->
	<insert id="insertOne">
		INSERT INTO
			store
		VALUES
			(NULL, #{storename}, #{president}, #{addr1}, #{tel}, NOW())
	</insert>
	
	<!-- 매장수정 -->
	<update id="updateOne">
		UPDATE
			store
		SET
			storename=#{storename}, president=#{president}, addr1=#{addr1}, tel=#{tel}
		WHERE id=#{id}
	</update>
	
	<!-- 매장삭제 -->
	<delete id="deleteOne">
		DELETE FROM
			store
		WHERE id=#{id}
	</delete>
</mapper>