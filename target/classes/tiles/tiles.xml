<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" 
	"http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
	
<tiles-definitions>
	<!-- HOME PAGE LAYOUT: Default -->
	<definition name="home.*" template="/WEB-INF/views/home/layouts/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/home/layouts/header.jsp" />
		<put-attribute name="main" value="/WEB-INF/views/home/{1}.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/home/layouts/footer.jsp" />
	</definition>
	
	<!-- ADMIN PAGE LAYOUT: Default -->
	<definition name="admin.*" template="/WEB-INF/views/admin/layouts/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/admin/layouts/header.jsp" />
		<put-attribute name="main" value="/WEB-INF/views/admin/{1}.jsp" />
	</definition>
</tiles-definitions>